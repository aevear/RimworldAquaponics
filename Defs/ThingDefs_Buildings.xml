<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <!-- Building Definition -->
    <ThingDef ParentName="BuildingBase">
        <defName>AquaponicsBay</defName>
        <label>aquaponics bay</label>
        <description>An advanced growing system that combines hydroponics with fish farming. Grow
            plants while raising fish in a symbiotic cycle. Fish must be added to start the cycle,
            and can be harvested once the population reaches sufficient size.</description>
        <thingClass>AquaponicsMod.Building_AquaponicsBay</thingClass>
        <graphicData>
            <texPath>Aquaponics_Basin/Aquaponics</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>(1,4)</drawSize>
            <damageData>
                <cornerTL>Damage/Corner</cornerTL>
                <cornerTR>Damage/Corner</cornerTR>
                <cornerBL>Damage/Corner</cornerBL>
                <cornerBR>Damage/Corner</cornerBR>
            </damageData>
        </graphicData>
        <altitudeLayer>LowPlant</altitudeLayer>
        <passability>PassThroughOnly</passability>
        <pathCost>60</pathCost>
        <castEdgeShadows>true</castEdgeShadows>
        <constructEffect>ConstructMetal</constructEffect>
        <fillPercent>0.30</fillPercent>
        <statBases>
            <WorkToBuild>2800</WorkToBuild>
            <MaxHitPoints>180</MaxHitPoints>
            <Flammability>0.5</Flammability>
            <Cleanliness>-3</Cleanliness>
        </statBases>
        <size>(1,4)</size>
        <costList>
            <Steel>100</Steel>
            <ComponentIndustrial>1</ComponentIndustrial>
        </costList>
        <fertility>1.61</fertility>
        <building>
            <defaultPlantToGrow>Plant_Rice</defaultPlantToGrow>
            <sowTag>Hydroponic</sowTag>
            <buildingTags>
                <li>Production</li>
            </buildingTags>
        </building>
        <tickerType>Rare</tickerType>
        <constructionSkillPrerequisite>4</constructionSkillPrerequisite>
        <researchPrerequisites>
            <li>Hydroponics</li>
        </researchPrerequisites>
        <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
        <designationCategory>Production</designationCategory>
        <staticSunShadowHeight>0.20</staticSunShadowHeight>
        <surfaceType>Item</surfaceType>
        <canOverlapZones>false</canOverlapZones>
    </ThingDef>

    <!-- Job Definitions -->
    <JobDef>
        <defName>AddFishToAquaponics</defName>
        <driverClass>AquaponicsMod.JobDriver_AddFish</driverClass>
        <reportString>adding fish to aquaponics bay.</reportString>
        <joyDuration>4000</joyDuration>
        <joyGainRate>1</joyGainRate>
    </JobDef>

    <JobDef>
        <defName>HarvestFishFromAquaponics</defName>
        <driverClass>AquaponicsMod.JobDriver_HarvestFish</driverClass>
        <reportString>harvesting fish from aquaponics bay.</reportString>
        <joyDuration>4000</joyDuration>
        <joyGainRate>1</joyGainRate>
    </JobDef>

    <!-- Work Giver Definitions -->
    <WorkGiverDef>
        <defName>AddFish</defName>
        <label>add fish to aquaponics</label>
        <giverClass>AquaponicsMod.WorkGiver_AddFish</giverClass>
        <workType>Growing</workType>
        <priorityInType>50</priorityInType>
        <verb>add fish to</verb>
        <gerund>adding fish to</gerund>
        <requiredCapacities>
            <li>Manipulation</li>
        </requiredCapacities>
        <prioritizeSustains>true</prioritizeSustains>
    </WorkGiverDef>

    <WorkGiverDef>
        <defName>HarvestFish</defName>
        <label>harvest fish from aquaponics</label>
        <giverClass>AquaponicsMod.WorkGiver_HarvestFish</giverClass>
        <workType>Growing</workType>
        <priorityInType>51</priorityInType>
        <verb>harvest fish from</verb>
        <gerund>harvesting fish from</gerund>
        <requiredCapacities>
            <li>Manipulation</li>
        </requiredCapacities>
        <prioritizeSustains>true</prioritizeSustains>
    </WorkGiverDef>

</Defs>